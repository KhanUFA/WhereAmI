<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ResultActivity" android:background="#E8F2F3">

    <TextView
            tools:text="Вы не угадали"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textResult"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="100dp" android:textColor="#000000"
            android:textSize="52sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textResultHint"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="216dp" android:textColor="#606060"
            android:textSize="42sp" app:layout_constraintHorizontal_bias="0.508" tools:text="HINT"/>
    <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/btn_floor"
            android:text="Вернуться\nк карте"
            android:textSize="20sp"
            android:layout_width="140dp"
            android:layout_height="70dp" android:id="@+id/btnReturnToMap"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="272dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="30dp"/>
    <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/btn_floor"
            android:text="Заново"
            android:textSize="20sp"
            android:layout_width="140dp"
            android:layout_height="70dp" android:id="@+id/btnRepeatGame"
            android:layout_marginEnd="30dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="272dp"
    />
</androidx.constraintlayout.widget.ConstraintLayout>