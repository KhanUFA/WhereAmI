<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SelectSide" android:background="#E8F2F3">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textSelect4"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="216dp" android:textColor="#000000"
            android:textSize="42sp" app:layout_constraintHorizontal_bias="0.508" android:text="Выбери крыло"/>
    <TextView
            tools:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textSelect2"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="100dp" android:textColor="#000000"
            android:textSize="72sp"/>
    <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/btn_floor"
            android:text="Левое Крыло"
            android:layout_width="150dp"
            android:layout_height="50dp" android:id="@+id/btnLeftside"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toTopOf="@+id/btnCentreSide"
            android:layout_marginStart="30dp" android:layout_marginBottom="10dp"
            android:textSize="18sp" app:layout_constraintEnd_toStartOf="@+id/btnRightSide" android:layout_marginEnd="10dp"/>
    <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/btn_floor"
            android:text="Правое крыло"
            android:layout_width="150dp"
            android:layout_height="50dp" android:id="@+id/btnRightSide"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/btnCentreSide"
            android:layout_marginEnd="30dp" android:layout_marginBottom="10dp" android:textSize="18sp"
            android:layout_marginStart="10dp" app:layout_constraintStart_toEndOf="@+id/btnLeftside"/>
    <androidx.appcompat.widget.AppCompatButton
            android:background="@drawable/btn_floor"
            android:text="Центр"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/btnCentreSide"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            android:textSize="18sp" app:layout_constraintTop_toBottomOf="@+id/textSelect2"
            android:layout_marginTop="200dp" android:visibility="invisible" tools:visibility="visible"/>
</androidx.constraintlayout.widget.ConstraintLayout>