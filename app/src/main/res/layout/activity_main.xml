<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:id="@+id/mainLayout">
    <com.moagrius.tileview.TileView
            android:id="@+id/map"
            android:layout_width="0dp"
            android:layout_height="0dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">
    </com.moagrius.tileview.TileView>
    <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rectangle_floor" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="140dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="140dp">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent" tools:ignore="UselessParent">
            <androidx.appcompat.widget.AppCompatButton
                    android:text="@string/strfloor1"
                    android:layout_width="45dp"
                    android:layout_height="40dp" android:id="@+id/btnMapFloor1"
                    android:background="@drawable/btn_floor" android:textSize="25sp" android:cursorVisible="true"
                    android:textAlignment="gravity"/>
            <androidx.appcompat.widget.AppCompatButton
                    android:text="@string/strfloor2"
                    android:layout_width="45dp"
                    android:layout_height="40dp" android:id="@+id/btnMapFloor2"
                    android:background="@drawable/btn_floor" android:textSize="25sp"/>
            <androidx.appcompat.widget.AppCompatButton
                    android:text="@string/strfloor3"
                    android:layout_width="45dp"
                    android:layout_height="40dp" android:id="@+id/btnMapFloor3"
                    android:background="@drawable/btn_floor" android:textSize="25sp"/>
            <androidx.appcompat.widget.AppCompatButton
                    android:text="@string/strfloor4"
                    android:layout_width="45dp"
                    android:layout_height="40dp" android:id="@+id/btnMapFloor4"
                    android:background="@drawable/btn_floor" android:textSize="25sp"/>
            <androidx.appcompat.widget.AppCompatButton
                    android:text="@string/strfloor5"
                    android:layout_width="45dp"
                    android:layout_height="40dp" android:id="@+id/btnMapFloor5"
                    android:background="@drawable/btn_floor" android:textSize="25sp"/>
        </LinearLayout>
    </FrameLayout>
    <androidx.appcompat.widget.AppCompatButton
            android:text="Играть"
            android:layout_width="115dp"
            android:layout_height="40dp" android:id="@+id/btnGame"
            android:background="@drawable/btn_floor" android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginBottom="15dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>